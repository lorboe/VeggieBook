<div class="container">
  <h2>Login</h2>

  <form action="/auth/login" method="POST" id="form-container">
    <div class="row">
      <div class="col-sm-4">
        <label for="username">Username</label>
      </div>
      <div class="col-sm-8">
        <input id="username" class="form-control" type="text" name="username" placeholder="JonSnow">
      </div>
    </div>
    <div class="row">
      <label for="password" class="col-sm-4 col-form-label">Password</label>
      <div class="col-sm-8">
        <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 offset-sm-4">
        <button class="btn btn-primary">Login</button>
      </div>
    </div>

    <br><br>

    <br>
    {{#if message }}
      <div class="error-message">{{ message }}</div>
    {{/if}}

    <br><br>


    <p class="account-message">
      Don't have an account yet?
      <a href="/auth/signup">Signup</a>
    </p>

    <p>
      Forgot your password?
      <a href="/auth/forgot">Reset Password</a>
    </p>
  </form>

</div>
