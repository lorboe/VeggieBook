        <li class="nav-item">
          <a class="nav-link" href="/">Home</a>
        </li>
      {{/unless}}
    </ul>
    <ul class="navbar-nav">
      {{#if isConnected }}
          <li class="nav-item">
            <a class="nav-link" href="/auth/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
          </li>
      {{/if}}
